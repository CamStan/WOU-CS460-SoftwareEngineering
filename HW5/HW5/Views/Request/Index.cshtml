@model IEnumerable<HW5.Models.Request>

@{
    ViewBag.Title = "Index";
}

<center><h2>Requests for Change of Major/Minor/Advisor</h2></center>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- Table to list all current change of major requests -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Minor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Advisor)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Major)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Minor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Advisor)
        </td>
    </tr>
}

</table>
