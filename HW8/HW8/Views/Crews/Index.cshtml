@model IEnumerable<HW8.Models.Crew>

@{
    ViewBag.Title = "Index";
}

<h2>Crews</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ship.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pirate.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Booty)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ship.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pirate.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Booty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
