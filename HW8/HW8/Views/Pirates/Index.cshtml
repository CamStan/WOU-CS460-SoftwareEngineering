@model IEnumerable<HW8.Models.Pirate>

@{
    ViewBag.Title = "Index";
}

<h2>Pirates</h2>

<p>
    @Html.ActionLink("Create New Pirate", "Create")
</p>
<div class="row">
    <div class="col-md-6">
        <!-- Table to list all pirates with their full names and conscription date-->
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConscriptionDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConscriptionDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<br />
<!-- Create page links for the number of pages needed to display all pirates -->
<div>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.NumberofPages; ++i)
        {
            <li>@Html.ActionLink(i.ToString(), "Index", new { page = i })</li>
        }
    </ul>
</div>
