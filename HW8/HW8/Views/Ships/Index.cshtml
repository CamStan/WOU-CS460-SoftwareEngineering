@model IEnumerable<HW8.Models.Ship>

@{
    ViewBag.Title = "Index";
}

<h2>Pirate Ships</h2>
<div class="row">
    <div class="col-md-6">
        <!-- Table to list all of the ships and their types and tonnage -->
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tonnage)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tonnage)<text> bm</text>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
